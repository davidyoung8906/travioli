import json
import sys

if len(sys.argv) < 2:
    print "Usage: " + sys.argv[0] + " AEC"
    exit(1)

aec = int(sys.argv[1])
smap_file = "smap.json"
aec_file = "aec.json"


with open(smap_file) as smap_json:
    smap = json.load(smap_json)

with open(aec_file) as aec_json:
    aec_tab = json.load(aec_json)

acs = aec_tab[aec]
for loc in reversed(acs):
    sid = str(loc[0])
    iid = str(loc[1])
    fileName = smap[sid]["originalCodeFileName"];
    pos = smap[sid][iid]
    print str(fileName) + ":" + str(pos)


